    <script>
        function fetchData(moduleNumber) {
            let moduleDropdown = document.getElementById('module' + moduleNumber);
            let selectedModule = moduleDropdown.value;
            let moduleDetails = document.getElementById('module' + moduleNumber + '-details');

            if (selectedModule) {
                // Perform AJAX request to your C# API
                $.ajax({
                    url: `/moduleESL/GetModuleData?moduleId=${selectedModule}`,
                    type: 'GET',
                    success: function (data) {
                        // Check if data is returned or the response is empty
                        if (data) {
                            // Populate the fields with the data
                            document.getElementById('soli' + moduleNumber).value = data.soli || '';
                            document.getElementById('style' + moduleNumber).value = data.style || '';
                            document.getElementById('cw' + moduleNumber).value = data.cw || '';
                            document.getElementById('bqty' + moduleNumber).value = data.bqty || '';
                            document.getElementById('iqty' + moduleNumber).value = data.iqty || '';
                            document.getElementById('fgqty' + moduleNumber).value = data.fgqty || '';
                            document.getElementById('dqty' + moduleNumber).value = data.dqty || '';
                        } else {
                            // Clear the fields to allow entering new data
                            document.getElementById('soli' + moduleNumber).value = '';
                            document.getElementById('style' + moduleNumber).value = '';
                            document.getElementById('cw' + moduleNumber).value = '';
                            document.getElementById('bqty' + moduleNumber).value = '';
                            document.getElementById('iqty' + moduleNumber).value = '';
                            document.getElementById('fgqty' + moduleNumber).value = '';
                            document.getElementById('dqty' + moduleNumber).value = '';
                        }

                        // Show the module details section
                        moduleDetails.classList.remove('hidden');
                    },
                    error: function (xhr) {
                        // If no content is found (204), display empty fields
                        if (xhr.status === 204) {
                            document.getElementById('soli' + moduleNumber).value = '';
                            document.getElementById('style' + moduleNumber).value = '';
                            document.getElementById('cw' + moduleNumber).value = '';
                            document.getElementById('bqty' + moduleNumber).value = '';
                            document.getElementById('iqty' + moduleNumber).value = '';
                            document.getElementById('fgqty' + moduleNumber).value = '';
                            document.getElementById('dqty' + moduleNumber).value = '';

                            moduleDetails.classList.remove('hidden');
                        } else {
                            alert('Failed to fetch module data.');
                        }
                    }
                });
            } else {
                moduleDetails.classList.add('hidden');
            }
        }


        function addNew() {
            // Collect data from Module 1 text boxes
            let module1Data = {
                Module: document.getElementById('module1').value,
                SOLI: document.getElementById('soli1').value,
                Style: document.getElementById('style1').value,
                cw: document.getElementById('cw1').value,
                cutb: document.getElementById('bqty1').value,
                inqty: document.getElementById('iqty1').value,
                fgq: document.getElementById('fgqty1').value,
                delivery: document.getElementById('dqty1').value
            };
              
            // Collect data from Module 2 text boxes
            let module2Data = {
                Module: document.getElementById('module2').value,
                SOLI: document.getElementById('soli2').value,
                Style: document.getElementById('style2').value,
                cw: document.getElementById('cw2').value,
                cutb: document.getElementById('bqty2').value,
                inqty: document.getElementById('iqty2').value,
                fgq: document.getElementById('fgqty2').value,
                delivery: document.getElementById('dqty2').value
            };

            // Combine both modules data into an array
            let modulesData = [module1Data, module2Data];
            console.log(JSON.stringify(modulesData));
            // Send the data using AJAX to the server for both modules
            $.ajax({
                url: '/SubModuleESL/SaveModuleData', 
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(modulesData),
                success: function () {
                    alert('Data saved successfully!');
                },
                error: function () {
                    alert('Failed to save data. Please check if all the fields are filled correctly');
                }
            });
        }


    </script>


