<body>
    <div class="navbar-menu-wrapper p-1 flex-grow d-flex align-items-stretch">

        <ul class="navbar-nav w-100">
            <li class="nav-item w-100">
                <h3 style="text-align: center;">Error Proof details</h3>
            </li>
        </ul>
    </div>

    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-warning">Change Error Proof details</h4>
                        <p class="card-title"> Use EP NO.</p>
                        <form class="form-sample">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Machine Serial No.</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="snum" placeholder="Machine Serial Number">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Level</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="module" placeholder="Level">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Operation</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="op" placeholder="Operation">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-sm-6 mx-auto text-center">
                                            <table class="table table-bordered mx-auto" id="entertb">
                                                <thead>
                                                    <tr>
                                                        <th>Task</th>
                                                        <th>L1</th>
                                                        <th>L2</th>
                                                        <th>L3</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Pick and Place</td>
                                                        <td><input type="checkbox" name="task1" value="1"></td>
                                                        <td><input type="checkbox" name="task1" value="2"></td>
                                                        <td><input type="checkbox" name="task1" value="3"></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Sewing</td>
                                                        <td><input type="checkbox" name="task2" value="1"></td>
                                                        <td><input type="checkbox" name="task2" value="2"></td>
                                                        <td><input type="checkbox" name="task2" value="3"></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Dispose</td>
                                                        <td><input type="checkbox" name="task3" value="1"></td>
                                                        <td><input type="checkbox" name="task3" value="2"></td>
                                                        <td><input type="checkbox" name="task3" value="3"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="button-container d-flex justify-content-center">
                          
                            <button type="button" onclick="addNew()" class="btn btn-inverse-success btn-fw mx-2">Submit</button>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>

  

        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © Deminda</span>
            </div>
        </footer>

        <script>

            function getSelectedCheckboxValue(name) {
                const checkboxes = document.querySelectorAll(`input[name="${name}"]`);
                for (const checkbox of checkboxes) {
                    if (checkbox.checked) {
                        return checkbox.value;
                    }
                }
                return null;
            }

            function clearInputs() {
                document.getElementById('snum').value = '';
                document.getElementById('module').value = '';
                document.getElementById('op').value = '';

                const checkboxes = document.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach(checkbox => {
                    checkbox.checked = false;
                });
            }

            function addNew() {
                const snum = document.getElementById('snum').value;
                const module = document.getElementById('module').value;
                const op = document.getElementById('op').value;

                const pickAndPlace = getSelectedCheckboxValue('task1');
                const sewing = getSelectedCheckboxValue('task2');
                const dispose = getSelectedCheckboxValue('task3');

                const newData = {
                    snum: snum,
                    module: module,
                    op: op,
                    pickAndPlace: pickAndPlace,
                    sewing: sewing,
                    dispose: dispose
                };

                $.ajax({
                    url: '/SynError/AddNewItem',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newData),
                    success: function (response) {
                        console.log('Response from server:', response);
                        if (response.status === "Success") {

                            clearInputs();
                        } else {
                            console.error(response);
                        }
                    },
                    error: function (error) {
                        console.error('Error adding new data:', error);
                    }
                });
            }

          
        </script>

