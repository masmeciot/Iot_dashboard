<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AQL Defects for Hanger System</title>
    <link rel="stylesheet" href="~/css/order.css">
    <link rel="shortcut icon" href="~/icon.png" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #121212;
            color: #fff;
            font-family: "Arial", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            text-align: center;
        }

        .header-container {
            width: 100%;
            text-align: center;
            position: absolute;
            top: 40px;
        }

        h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .separator {
            width: 80%;
            height: 3px;
            background: linear-gradient(to right, #4CAF50, #E53935);
            margin: 0 auto;
            border-radius: 2px;
        }

        .counter {
            font-size: 80px;
            font-weight: bold;
            margin: 50px 0;
            transition: transform 0.2s ease-in-out;
        }

        .container {
            display: flex;
            gap: 50px;
        }

        .button {
            width: 200px;
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 100px;
            font-weight: bold;
            border-radius: 20px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.1s ease-in-out, background 0.3s ease-in-out;
        }

        .plus {
            background-color: #4CAF50;
            color: white;
        }

        .minus {
            background-color: #E53935;
            color: white;
        }

        .button:active {
            transform: scale(0.9);
        }

        /* Ripple Effect */
        .ripple {
            position: absolute;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.3);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0);
            border-radius: 50%;
            animation: rippleEffect 0.6s ease-out;
            pointer-events: none;
        }


        /* Counter Animation */
        .grow {
            transform: scale(1.2);
        }

    </style>
</head>
<body>
    <div class="header-container">
        <h2>AQL Defects for Hanger System</h2>
        <div class="separator"></div>
    </div>

    <div class="counter" id="counter">0</div>
    <div class="container">
        <div class="button plus" onclick="updateCounter()">+</div>
        <div class="button minus" onclick="updateCounter(-)">−</div>
    </div>


    <script>
        let count = 0;
        const counterElement = document.getElementById("counter");

        function updateCounter(value) {
            fetch('/AQL/UpdateCount', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(value)  // Directly send the change value
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    count = data.newCount;  // Update the count with the server response
                    counterElement.textContent = count;
                } else {
                    console.error("Failed to update count on server.");
                }
            })
            .catch(error => {
                console.error("Error sending count to the server:", error);
            });
        }

        // Attach event listeners (remove inline handlers in the HTML)
        document.querySelector(".plus").addEventListener("click", () => {
            updateCounter(1);
        });

        document.querySelector(".minus").addEventListener("click", () => {
            updateCounter(-1);
        });

    </script>



</body>
</html>