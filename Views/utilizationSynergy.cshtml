    <script>
            function calculateShiftHours(shiftStr) {
                if (!shiftStr || !shiftStr.includes('-')) return 1;

                const [startStr, endStr] = shiftStr.split('-').map(s => s.trim());
                const [startH, startM] = startStr.split(':').map(Number);
                const [endH, endM] = endStr.split(':').map(Number);

                const now = new Date();
                const start = new Date(now);
                start.setHours(startH, startM, 0, 0);

                const end = new Date(now);
                end.setHours(endH, endM, 0, 0);

                // Handle overnight shifts (e.g., 22:00 - 06:00)
                if (end <= start) {
                    end.setDate(end.getDate() + 1);
                }

                const durationMs = end - start;
                return durationMs / (1000 * 60 * 60); // Convert ms to hours
            }


            $(document).ready(function () {

                function fetchData(selectedDate = null) {
                    let url = '/utilizationSynergy/GetUtilizeIotData';
                    if (selectedDate) {
                        url += `?date=${selectedDate}`;
                    }

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            let tbody = $('#table tbody');
                            tbody.empty(); // Clear previous data
                            console.log("Data fetched:", data);
                            if (!data || data.length === 0) {
                                tbody.append('<tr><td colspan="24">No data available</td></tr>');
                                return;
                            }
                            var totalRuntimeHours = 0;
                            data.forEach(item => {

                            const totalRuntimeMs = item.totalRuntimeSum || 0;
                            totalRuntimeHours = totalRuntimeMs / (1000 * 60 * 60);
                            
                            const shiftHours = calculateShiftHours(item.shift) || 1;

                            const utilization = ((totalRuntimeHours / shiftHours) * 100).toFixed(2);
                            console.log(`Utilization: ${utilization}% | TotalRuntimeHours: ${totalRuntimeHours} | ShiftHours: ${shiftHours}`);

                            const row = `
                                <tr>
                                    <td>${item.chipID}</td>
                                    <td>${item.userName}</td>
                                    <td>${item.plant}</td>
                                    <td>${item.operation}</td>
                                    <td>${item.machineID}</td>
                                    <td>${item.shift}</td>
                                    <td>${totalRuntimeHours.toFixed(2)}</td>
                                    <td>${utilization}</td>
                                </tr>
                            `;

                            tbody.append(row);
                     });
                        },
                        error: function (xhr, status, error) {
                            console.error("Error fetching data:", error);
                            $('#table tbody').html('<tr><td colspan="24">Error loading data</td></tr>');
                        }
                    });
                }

                // Initial load
                $('#filterDate').val(new Date().toISOString().split('T')[0]);
                fetchData(new Date().toISOString().split('T')[0]);

                // Auto-refresh (every 60 seconds)
                setInterval(() => {
                    const selectedDate = $('#filterDate').val();
                    fetchData(selectedDate);
                }, 60000);

                // Filter button click
                $('#filterBtn').click(function () {
                    const selectedDate = $('#filterDate').val();
                    fetchData(selectedDate);
                });
            });
    </script>
